<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/Cellneww"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rlv_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp">

        <RelativeLayout
            android:id="@+id/Rlv_micc"
            android:layout_width="95dp"
            android:layout_height="95dp"


            android:layout_alignTop="@+id/Rlv_mic"
            android:layout_marginLeft="25dp"
            android:layout_toEndOf="@+id/Rlv_mic"
            android:layout_toRightOf="@+id/Rlv_mic"
            android:background="@drawable/round_icon">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:text="Recommended for karen"
                android:textColor="@android:color/background_dark"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Rlv_mic"
            android:layout_width="95dp"
            android:layout_height="95dp"

            android:layout_alignTop="@+id/Rlv_gift_cards"
            android:layout_marginLeft="25dp"
            android:layout_toEndOf="@+id/Rlv_gift_cards"
            android:layout_toRightOf="@+id/Rlv_gift_cards"
            android:background="@drawable/round_icon">

            <ImageView
                android:id="@+id/img_mic"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/mic" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Rlv_gift_cards"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/round_icon">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Gift Cards"
                android:textColor="@android:color/background_dark" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rlv_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#4AB64F">

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Gifts for Karen"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

    </RelativeLayout>

</RelativeLayout>
